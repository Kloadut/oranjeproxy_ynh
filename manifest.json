{
    "name": "OranjeProxy",
    "id": "oranjeproxy",
    "description": {
        "en": "A simple PHP proxy",
        "fr": "Un proxy PHP l√©ger"
    },
    "url": "http://lehollandaisvolant.net/tout/oranjeproxy/",
    "maintainer": {
        "name": "kload",
        "email": "kload@kload.fr"
    },
    "multi_instance": "true",
    "services": [
        "nginx",
        "php5-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for OranjeProxy",
                    "fr": "Choisissez un domaine pour OranjeProxy"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for OranjeProxy",
                    "fr": "Choisissez un chemin pour OranjeProxy"
                },
                "example": "/proxy",
                "default": "/proxy"
            }
        ]
    }
}
